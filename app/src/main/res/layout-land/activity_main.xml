<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/noséqué"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/game1"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginStart="288dp"
        android:layout_marginLeft="288dp"
        android:layout_marginBottom="8dp"
        android:text="0"
        android:textSize="36sp"
        app:fontFamily="@font/erbos_draco_1st_open_nbp"
        app:layout_constraintBottom_toTopOf="@+id/game2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/game2"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginStart="288dp"
        android:layout_marginLeft="288dp"
        android:layout_marginBottom="16dp"
        android:text="0"
        android:textSize="36sp"
        app:fontFamily="@font/erbos_draco_1st_open_nbp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Sets"
        app:layout_constraintBottom_toTopOf="@+id/sets1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.955" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="288dp"
        android:layout_marginLeft="288dp"
        android:layout_marginBottom="12dp"
        android:text="Games"
        app:layout_constraintBottom_toTopOf="@+id/game1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Points"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toEndOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="Previous Sets"
        app:layout_constraintBottom_toTopOf="@+id/ps1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="106dp"
        android:layout_height="76dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="4dp"
        android:checkedButton="@+id/bo5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/bo3"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3" />

        <RadioButton
            android:id="@+id/bo5"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5" />
    </RadioGroup>

    <Button
        android:id="@+id/pA"
        android:layout_width="86dp"
        android:layout_height="37dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:text="POINT A"
        app:layout_constraintBaseline_toBaselineOf="@+id/points1"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/pB"
        android:layout_width="88dp"
        android:layout_height="37dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:text="POINT B"
        app:layout_constraintBaseline_toBaselineOf="@+id/points2"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/ps1"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginEnd="356dp"
        android:layout_marginRight="356dp"
        android:text="____"
        android:textSize="36sp"
        app:fontFamily="@font/erbos_draco_1st_open_nbp"
        app:layout_constraintBaseline_toBaselineOf="@+id/game1"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/points1"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="0"
        android:textSize="36sp"
        app:fontFamily="@font/erbos_draco_1st_open_nbp"
        app:layout_constraintBaseline_toBaselineOf="@+id/game1"
        app:layout_constraintEnd_toStartOf="@+id/pA"
        app:layout_constraintHorizontal_bias="0.797"
        app:layout_constraintStart_toEndOf="@+id/game1" />

    <TextView
        android:id="@+id/points2"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="0"
        android:textSize="36sp"
        app:fontFamily="@font/erbos_draco_1st_open_nbp"
        app:layout_constraintBaseline_toBaselineOf="@+id/game2"
        app:layout_constraintEnd_toStartOf="@+id/pB"
        app:layout_constraintHorizontal_bias="0.815"
        app:layout_constraintStart_toEndOf="@+id/game2" />

    <TextView
        android:id="@+id/ps2"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginEnd="356dp"
        android:layout_marginRight="356dp"
        android:text="____"
        android:textSize="36sp"
        app:fontFamily="@font/erbos_draco_1st_open_nbp"
        app:layout_constraintBaseline_toBaselineOf="@+id/game2"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/sets1"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="0"
        android:textSize="36sp"
        app:fontFamily="@font/erbos_draco_1st_open_nbp"
        app:layout_constraintBaseline_toBaselineOf="@+id/ps1"
        app:layout_constraintEnd_toStartOf="@+id/ps1"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/sets2"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="0"
        android:textSize="36sp"
        app:fontFamily="@font/erbos_draco_1st_open_nbp"
        app:layout_constraintBaseline_toBaselineOf="@+id/ps2"
        app:layout_constraintEnd_toStartOf="@+id/ps2"
        app:layout_constraintHorizontal_bias="0.162"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="RESET"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintStart_toEndOf="@+id/radioGroup"
        app:layout_constraintTop_toBottomOf="@+id/pB" />

</android.support.constraint.ConstraintLayout>